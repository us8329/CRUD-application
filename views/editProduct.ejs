<div class="modal-dialog modal-dialog-centered" role="document">
    <% records.forEach(function(row){%>
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Edit Product <%=row.productName%></h5>
      </div>
      <div class="modal-body">
        
      <form  action="/update/<%= row._id%>" method = "POST" enctype="multipart/form-data">
        <div class="form-group">
            
            <input type="text" class="form-control" value="<%= row.productName%>" id="productName" name = "productName">
            <small class="form-text text-muted text-left">name of product</small>
        </div>
        <div class="form-group">
            <select class="form-control" id="productType" value="<%= row.productType%>" name= "productType">
                <option>--N/A--</option>
                <option>Books</option>
                <option>Movies</option>
                <option>Medicine</option>
                <option>Electronics</option>
                <option>Sports</option>
                <option>Clothing</option>
                <option>accessories</option>
                <option>Lifestyle</option>
           </select>
            <small class="form-text text-muted text-left">mention type of product</small>
            
        </div>
        <div class="form-group">
          <input type="date" class="form-control" placeholder="dd/mm/yyyy" value="<%= row.availibilityDate%>" id="availibilityDate" name = "availibilityDate">
          <small class="form-text text-muted text-left">date of availibility</small>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="99.99" value="<%= row.price%>" id="price" name="price">
            <small class="form-text text-muted text-left">cost of the product in â‚¹</small>
          </div>
  
          <!-- <form action="/upload" method="POST" enctype="multipart/form-data"> -->
          <div class="form-group">
            <input type="file" class="form-control" name="productImage">
            <small class="form-text text-muted text-left">Product Image</small>
            <img src='<%= row.image %>' width="80">
          </div>
          <!-- </form> -->
  
        <div class="modal-footer">
            <button  type="submit" class="btn btn-primary" data-dismiss="modal">Update Product</button>
        </div>
    </form>
    <% }) %>
  </div>
