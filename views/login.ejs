<title><%=title%></title>
 
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
<link rel="stylesheet" href="css/main.css">
<%- include('header') -%>


<div class = "text-center center-div" id="login">
  <div class="container w-25 border py-5">
    <div class="title pb-5">
      <h2 class="font-weight-bold">Login</h2>
      <span>Login into existing account</span>
    </div>
    <form action = '/login' method = "POST">
      <div class="form-group">
        <input type="email" class="form-control" placeholder="example@gmail.com" id ="username" name ="username" required >
        <small class="form-text text-muted text-left">enter email</small>
      </div>
      <div class="form-group">
        <input type="password" class="form-control"  name="password" required>
        <small class="form-text text-muted text-left">enter password</small>
      </div>

      <button type="submit"  href ="/" class="btn btn-dark rounded-pi">LogIn</button>
      <div class = "signupoption">
        <a href = "signup">
          dont have an account? signup
        </a>
      </div>

    </form>
  </div>
</div>
<style>
  .signupoption{
    padding-top: 15px;
  }
</style>
